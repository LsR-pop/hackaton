generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       Int    @id
    username String @unique
    email    String @unique
    password String

    characters Character[]

    player   Player? @relation(fields: [playerId], references: [id])
    playerId Int?
}

model Player {
    id         Int         @id
    friends    User[]
    characters Character[]
}

model Character {
    id    Int    @id
    age   Int
    cards Card[]

    user   User? @relation(fields: [userId], references: [id])
    userId Int?

    player   Player? @relation(fields: [playerId], references: [id])
    playerId Int?
}

model Card {
    id          Int    @id
    name        String @unique
    description String

    characters Character[]
}

model Event {
    id          Int    @id
    name        String @unique
    description String
}
